<div class="container">  
    <div class="row">
        <h2>Departments information</h2>
        <div class="col-md-2"></div>
        <div class="col-md-8"></div>

    </div>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Department Number</th>
      <th scope="col">Department name</th>
    </tr>
  </thead>
  <tbody>
      {{#each departments}}
    <tr>
      <th scope="row">{{this.dept_no}}</th>
      <td>{{this.dept_name}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</div>